<!--        android:required="false" />-->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />



    <application
        android:name=".AndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BaseAndroidApp"
        android:banner="@mipmap/ic_launcher">

        <activity
            android:name=".util.navigator.RouteActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->

<!--                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>

        <activity
            android:name=".sample.navigation.NavigationActivity"
            android:exported="false" />
        <activity
            android:name=".vod.VodActivity"
            android:configChanges="keyboard|keyboardHidden|navigation"
            android:exported="true" />
        <activity android:name=".vod.VodDetailActivity" />
        <activity android:name=".sample.motionlayout.YoutubeCloneActivity" />
        <activity android:name=".sample.notification.NotificationActivity" />
        <activity android:name=".sample.exoplayer.ExoplayerActivity" />


        <service
            android:name=".sample.notification.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
            <meta-data
                android:name="com.google.firebase.messaging.default_notification_channel_id"
                android:value="@string/default_notification_channel_id" />
        </service>
    </application>

</manifest>