<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_graph"
    app:startDestination="@id/home_dest">

    <fragment
        android:id="@+id/home_dest"
        android:name="com.devhoony.baseandroidapp.sample.navigation.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/next_action"
            app:destination="@id/home_detail_dest"
            app:restoreState="true"
            app:popUpToSaveState="true"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right">

        </action>

    </fragment>


    <fragment
        android:id="@+id/home_detail_dest"
        android:name="com.devhoony.baseandroidapp.sample.navigation.HomeDetailFragment"
        tools:layout="@layout/fragment_home_detail">

    </fragment>

</navigation>